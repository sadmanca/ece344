{
    "markdown.extension.print.theme": "dark",
    // MARKDOWN PREVIEW text styling
    "markdown.styles": [
        "style.css"
    ],
    // HIGHLIGHT TEXT IN .md FILES
    "highlight.decorations": {
        "highlight.rangeBehavior": 1
    },
    "highlight.regexes": {
        "(==.*?==)": {
            "filterLanguageRegex": "markdown",
            "decorations": [
                {
                    "backgroundColor": "yellow"
                }
            ]
        },
        "(~~.*?~~)": {
            "filterLanguageRegex": "markdown",
            "decorations": [
                {
                    "textDecoration": "line-through"
                }
            ]
        },
        "(  +)$": {
            "filterLanguageRegex": "markdown",
            "regexFlags": "gm",
            "decorations": [
                {
                    "borderRadius": "4px",
                    "backgroundColor": "rgba(155,0,0,0.2)"
                }
            ]
        },
        "(!!! \\w*)": {
            "filterLanguageRegex": "markdown",
            "regexFlags": "g",
            "decorations": [
                {
                    "backgroundColor": "rgb(205,240,234,0.5)"
                }
            ]
        },
        "^(# )": {
            "filterLanguageRegex": "markdown",
            "regexFlags": "gm",
            "decorations": [
                {
                    "isWholeLine": "true",
                    "backgroundColor": "rgba(172, 255, 62, 0.9)",
                    "color": "black",
                    "overviewRulerColor": "rgba(0, 182, 0, 1)"
                }
            ]
        },
        "^(## )": {
            "filterLanguageRegex": "markdown",
            "regexFlags": "gm",
            "decorations": [
                {
                    "isWholeLine": "true",
                    "color": "black",
                    "backgroundColor": "rgba(172, 255, 62, 0.6)",
                    "overviewRulerColor": "rgba(172, 255, 62, 0.3)"
                }
            ]
        },
        "^(### )": {
            "filterLanguageRegex": "markdown",
            "regexFlags": "gm",
            "decorations": [
                {
                    "isWholeLine": "true",
                    "letterSpacing": "1px",
                    "backgroundColor": "rgba(190,174,226,0.2)",
                    "overviewRulerColor": "rgba(190,174,226,0.3)"
                }
            ]
        },
        "^(#### )": {
            "filterLanguageRegex": "markdown",
            "regexFlags": "gm",
            "decorations": [
                {
                    "isWholeLine": "true",
                    "letterSpacing": "1px",
                    "backgroundColor": "rgba(190,174,226,0.1)",
                    "overviewRulerColor": "rgba(190,174,226,0.2)"
                }
            ]
        },
        // HIGHLIGHT
        "(.*{style=\\\"color:(.*)\\\"}.*)": {
            "filterLanguageRegex": "markdown",
            "decorations": [
                {
                    "color": "$2"
                }
            ]
        },
        "({\\.r})": {
            "filterLanguageRegex": "markdown",
            "decorations": [
                {
                    "isWholeLine": "true",
                    "color": "rgb(249,38,114)"
                }
            ]
        },
        "({\\.lr})": {
            "filterLanguageRegex": "markdown",
            "decorations": [
                {
                    "isWholeLine": "true",
                    "color": "rgb(255, 81, 81)"
                }
            ]
        },
        "({\\.g})": {
            "filterLanguageRegex": "markdown",
            "decorations": [
                {
                    "isWholeLine": "true",
                    "color": "rgb(166,226,46)"
                }
            ]
        },
        "({\\.gray})": {
            "filterLanguageRegex": "markdown",
            "decorations": [
                {
                    "isWholeLine": "true",
                    "color": "rgb(26, 26, 26)"
                }
            ]
        },
        "({\\.lg})": {
            "filterLanguageRegex": "markdown",
            "decorations": [
                {
                    "isWholeLine": "true",
                    "color": "rgb(163, 238, 51)"
                }
            ]
        },
        "({\\.b})": {
            "filterLanguageRegex": "markdown",
            "decorations": [
                {
                    "isWholeLine": "true",
                    "color": "rgb(129,154,255)"
                }
            ]
        },
        "({\\.c})": {
            "filterLanguageRegex": "markdown",
            "decorations": [
                {
                    "isWholeLine": "true",
                    "color": "rgb(102,217,239)"
                }
            ]
        },
        "({\\.m})": {
            "filterLanguageRegex": "markdown",
            "decorations": [
                {
                    "isWholeLine": "true",
                    "color": "rgb(174,129,255)"
                }
            ]
        },
        "({\\.p})": {
            "filterLanguageRegex": "markdown",
            "decorations": [
                {
                    "isWholeLine": "true",
                    "color": "rgb(174,129,255)"
                }
            ]
        },
        "({\\.y})": {
            "filterLanguageRegex": "markdown",
            "decorations": [
                {
                    "isWholeLine": "true",
                    "color": "rgb(44, 32, 66)"
                }
            ]
        }
    },
    "markdown.preview.lineHeight": 1.4,
    "markdown.preview.breaks": true,
    "markdown.preview.typographer": true,
    "markdown.preview.fontFamily": "'Iosevka', -apple-system, BlinkMacSystemFont, 'Segoe WPC', 'Segoe UI', system-ui, 'Ubuntu', 'Droid Sans', sans-serif",
    "[markdown]": {
        "editor.snippetSuggestions": "top",
        "editor.quickSuggestions": {
            "other": true,
            "comments": false,
            "strings": true,
        },
    },
    "editor.tabSize": 3,
    "files.associations": {
        "*.do": "python",
        "iostream": "cpp",
        "ostream": "cpp",
        "limits": "cpp",
        "string": "cpp"
    },
}